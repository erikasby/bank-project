<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('includes/head.ejs') %>
        <link rel="stylesheet" href="/css/login.css" />
        <title><%= title %></title>
    </head>
    <body>
        <%- include('includes/header.ejs', {active: active}) %>
        <main class="main-content">
            <section class="login">
                <form class="login__form" action="/login" method="POST">
                    <label for="username">Username</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="Johndoe12"
                        pattern="[A-Za-z0-9]{3,20}"
                        required
                    />
                    <div class="password-separator">
                        <label for="password">Password</label>
                        <a href="/register" class="login__forgot-link">Forgot password?</a>
                    </div>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="••••••"
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{6,30}$"
                        required
                    />
                    <button type="submit" class="button login-form__button">Login</button>
                </form>
            </section>
        </main>
        <%- include('includes/footer.ejs') %>
    </body>
</html>
